Subject: [PATCH] Make ESLint config stricter and add autofix + commit step in workflow

---
 .github/workflows/lint.yml    |  45 +++++++++++++++++++++++++++++++++++++++++
 .eslintrc.json                |  35 +++++++++++++++++++++++++++
 package.json                  |  20 +++++++++++++++
 3 files changed, 100 insertions(+)
 create mode 100644 .github/workflows/lint.yml
 create mode 100644 .eslintrc.json
 create mode 100644 package.json
diff --git a/.github/workflows/lint.yml b/.github/workflows/lint.yml
new file mode 100644
index 0000000..1111111
--- /dev/null
+++ b/.github/workflows/lint.yml
@@ -0,0 +1,45 @@
+name: Lint
+
+on:
+  push:
+    branches:
+      - main
+      - master
+  pull_request:
+    branches:
+      - main
+      - master
+
+# Allow workflow to push changes (autofix commits)
+permissions:
+  contents: write
+
+jobs:
+  eslint:
+    name: ESLint (fix & report)
+    runs-on: ubuntu-latest
+
+    steps:
+      - name: Checkout repository
+        uses: actions/checkout@v4
+        with:
+          fetch-depth: 0
+
+      - name: Use Node.js
+        uses: actions/setup-node@v4
+        with:
+          node-version: 18
+
+      - name: Install dependencies
+        run: npm ci
+
+      - name: Run ESLint --fix
+        run: npm run lint:fix
+
+      - name: Commit and push ESLint fixes
+        uses: EndBug/add-and-commit@v9
+        with:
+          author_name: 'github-actions[bot]'
+          author_email: '41898282+github-actions[bot]@users.noreply.github.com'
+          message: 'chore: apply ESLint --fix'
+          add: '.'
+          allow_empty: false
+
+      - name: Run ESLint (report)
+        run: npm run lint
+
